<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/fondo_drawer_chat">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_sheet_desactivar_chat"
        android:background="@color/Blanco"
        android:textColor="@color/AzulMensaje"
        android:id="@+id/btn_desactivar_drawer_alert_sheet"/>

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:background="@color/Blanco"
        android:textColor="@color/AzulMensaje"
        android:id="@+id/btn_cancelar_drawer_alert_sheet"/>
</LinearLayout>