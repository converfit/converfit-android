<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.citious.converfit.Actividades.Conversations.ListMessagesAcitity"
    android:background="@color/Blanco">
    <include
        android:id="@+id/up_list_messages_tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/up_list_messages_tool_bar"
        tools:ignore="UselessParent">


            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:id="@+id/lstListMessages"
                android:divider="@null"
                android:stackFromBottom="true"
                android:transcriptMode="normal"/>

        <include
            android:id="@+id/list_messages_tool_bar"
            layout="@layout/tool_bar_list_messages"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    </LinearLayout>
</RelativeLayout>
