<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.citious.converfit.Actividades.Settings.PasswordMenuActivity"
    android:background="@color/Fondo_Gris_Coverfit">
    <include
        android:id="@+id/password_menu_tool_bar"
        layout="@layout/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <ListView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lstPasswordMenu"
        android:background="@color/Blanco"
        android:layout_below="@+id/password_menu_tool_bar"/>
</RelativeLayout>
